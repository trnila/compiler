int n;
write "Please, enter number to test if its prime or not: ";
read n;

// compute sqrt of n
float max;
max = n / 3;
if n <= 0 then
	max = 0;
else
	int i;
	for (i=0; i<32; i = i+1) begin
		max = (max + n / max) / 2;
	end;
end;

// compute if is prime
boolean isPrime;
isPrime = True;
int x;
for(x = 1; x <= max; x = x + 1) begin
	if n % x != 0 then
		isPrime = False;
	end;
end;

write n, " is ", isPrime ? " " : "not", "prime";